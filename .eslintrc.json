{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "no-unused-vars": ["warn"],
    "no-console": "off",
    "camelcase": ["warn", { "properties": "never" }],
    "no-trailing-spaces": ["error"],
    "eol-last": ["error", "always"]
  },
  "ignorePatterns": ["node_modules/", "dist/", "build/", "*.min.js"]
}
