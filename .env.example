# Variables de Entorno - TrainSimulatorAutopilot
# Copiar este archivo como .env y configurar los valores apropiados

# Clave secreta para Flask (requerida para sesiones seguras)
FLASK_SECRET_KEY=your-secure-random-secret-key-here

# Configuración del servidor web
# Para desarrollo local: 127.0.0.1
# Para acceso desde otras máquinas: 0.0.0.0 (usar con precaución)
DASHBOARD_HOST=127.0.0.1
DASHBOARD_PORT=5001

# Configuración de logging
LOG_LEVEL=INFO
LOG_FILE=logs/autopilot.log

# Configuración de base de datos (si se implementa en el futuro)
# DATABASE_URL=sqlite:///autopilot.db

# Configuración de ML (si se usa)
# MODEL_PATH=data/predictive_model.pkl